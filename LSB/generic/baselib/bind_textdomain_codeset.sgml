#include &lt;libintl.h>
</FUNCSYNOPSISINFO>
<FUNCPROTOTYPE>
  <FUNCDEF>char *
   <FUNCTION>bind_textdomain_codeset</FUNCTION>
  </FUNCDEF>
  <PARAMDEF>const char *
     <PARAMETER>domainname</PARAMETER>
  </PARAMDEF>
  <PARAMDEF>const char *
     <PARAMETER>codeset</PARAMETER>
  </PARAMDEF>
