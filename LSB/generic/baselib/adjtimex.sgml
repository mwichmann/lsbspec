<FUNCSYNOPSIS>
<FUNCSYNOPSISINFO>
#include &lt;sys/timex.h&gt;
</FUNCSYNOPSISINFO>
<FUNCPROTOTYPE>
 <FUNCDEF>int 
  <FUNCTION>adjtimex</FUNCTION></FUNCDEF>
 <PARAMDEF><FUNCPARAMS>struct <STRUCTNAME>timex</STRUCTNAME> 
  <PARAMETER>*buf</PARAMETER></FUNCPARAMS></PARAMDEF>
